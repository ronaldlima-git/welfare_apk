<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AjudaActivity">

    <Button
        android:id="@+id/btnAjudaVoltar"
        android:layout_width="32sp"
        android:layout_height="32sp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_arrow_back_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgAjuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_heart_144" />

    <TextView
        android:id="@+id/txtAjudaTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/app_name"
        android:textColor="@color/title"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgAjuda" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAjudaTitulo">

        <TextView
            android:id="@+id/txtViewAjudaRecuperarSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:linksClickable="false"
            android:paddingTop="8sp"
            android:singleLine="false"
            android:text="@string/RecorverPass"
            android:textAllCaps="false"
            android:textColor="@color/title"
            android:textSize="18sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutAjudaEmail"
            android:layout_width="312sp"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/inputEditAjudaEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/inputLoginEmail"
                android:inputType="textWebEmailAddress" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnAjudaConfirmar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:background="@color/colorPrimaryDark"
            android:text="@string/buttonNeedHelpContinue"
            android:textColor="#FFFFFF" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>